---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import timezone from "dayjs/plugin/timezone";

dayjs.extend(utc);
dayjs.extend(timezone);

const lastModified = dayjs(Astro.props.frontmatter.lastModified)
  .tz("Asia/Tokyo")
  .format("YYYY-MM-DD");

const { frontmatter } = Astro.props;
const { minutesRead } = Astro.props.frontmatter;
---
<BaseLayout pageTitle={frontmatter.title}>
  <div class="post-header">
    <h1 class="title">{frontmatter.title}</h1>
    <div class="meta">
      <p>
        Author: {frontmatter.author}
        , {minutesRead}
        ,<Icon name="mdi:language-markdown-outline" class="icon" />
      </p>
      <p style="display: flex; justify-content: center;">
        Published: {frontmatter.pubDate.toString().slice(0,10)} / Last modified: {lastModified}
      </p>
    </div>
    <div class="tags">
      <Icon name="mdi:tag-multiple-outline" class="icon" />
      {frontmatter.tags.map((tag: string) => (
        <p class="tag">#<a href={`/tags/${tag}`}>{tag}</a></p>
      ))}
    </div>
  </div>
  <slot />
</BaseLayout>

<style>
  .post-header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .title {
    text-decoration-line: underline;
    text-decoration-color: var(--color-accent);
    text-underline-offset: 0.3em;
    text-decoration-thickness: 4px;
  }

  .meta {
    text-align: center;
    color: var(--color-text-secondary);
  }

  :global(h2) {
    border-left: 4px solid var(--color-accent);
    padding-left: 1em;
    margin-left: 0;
  }

  :global(h3) {
    padding-left: 1em;
    margin-left: 0;
  }

  :global(h4) {
    font-size: 1.1em;
    padding-left: 1em;
    margin-left: 0;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;
    align-items: center;
  }

  .tag {
    margin: 0;
    font-size: 0.75em;
    border: 2px solid var(--color-border);
    border-radius: 0.5em;
    padding: 0.5em;
    background-color: var(--color-card-bg);
    transition: all 0.2s ease;
  }

  .tag:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .tag a {
    color: var(--color-text);
    text-decoration: none;
  }

  .tag:hover a {
    color: var(--color-accent);
  }
</style>