---
import { SEO } from 'astro-seo';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ThemeToggle from '@/components/ThemeToggle.astro';
import ThemeIcon from '@/components/ThemeIcon.astro';
import '@/styles/global.css';
import { siteConfig } from '@/data/seo';

const { pageTitle, description, image, article } = Astro.props;
const pageUrl = new URL(Astro.url.pathname, Astro.site).href;
const pageDescription = description || siteConfig.description;
---
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={pageTitle ? `${pageTitle} | ${siteConfig.title}` : siteConfig.title}
      description={pageDescription}
      canonical={pageUrl}
      openGraph={{
        basic: {
          title: pageTitle || siteConfig.title,
          type: article ? 'article' : 'website',
          image: image || siteConfig.image,
          url: pageUrl,
        },
        optional: {
          description: pageDescription,
          locale: siteConfig.locale,
          siteName: siteConfig.title,
        },
      }}
      twitter={{
        card: 'summary',
        site: siteConfig.twitter,
        creator: siteConfig.twitter,
      }}
    />
    <script is:inline>
      // ページロード前にテーマを適用（フラッシュ防止）
      (function() {
        const storedTheme = localStorage.getItem('theme');
        const theme = storedTheme || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body>
    <ThemeToggle />
    <Header />
	    <slot />
    <Footer />
  </body>
</html>
