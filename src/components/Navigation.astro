---
import { Icon } from 'astro-icon/components';
---
<div id="main-menu" class="nav-links">
  <a href="/">
    <Icon name="system-uicons:home-door" class="icon" /> 
    <span>Home</span>
  </a>
  <a href="/about/">
    <Icon name="system-uicons:user" class="icon" /> 
    <span>About</span>
  </a>
  <a href="/blog/">
    <Icon name="system-uicons:document-stack" class="icon" /> 
    <span>Blog</span>
  </a>
</div>

<style>
.nav-links {
  width: 100%;
  margin: auto 0;
  display: flex;
  background-color: var(--color-card-bg);
  border-radius: 1rem;
}

.nav-links a {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-card-bg);
  border: 2px solid var(--color-card-bg);
  padding: 1rem;
  border-radius: 1rem;
  margin: 0 0.5rem;
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: bold;
  text-transform: uppercase;
  color: var(--color-text);
  /* transition: opacity 0.3s ease, transform 0.3s ease; */
}

.nav-links a .icon {
  display: inline-block;
  width: 24px;
  height: 24px;
}

.nav-links span {
  display: none;
}

.nav-links a:hover,
.nav-links a:focus {
  border: 2px solid var(--color-accent);
  color: var(--color-accent);

  transform: scale(1.3);
  z-index: 1;
}

@media screen and (min-width: 800px) {
  .nav-links {
    margin: auto 0;
    display: flex;
  }

  .nav-links a {
    display: inline-block;
    background-color: var(--color-card-bg);
    border: 2px solid var(--color-card-bg);
    transition: opacity 0.3s ease, transform 0.3s ease;
    padding: 15px 20px;
  }

  .nav-links span{
    display: inline-block;
  }
}
</style>