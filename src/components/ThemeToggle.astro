<button id="theme-toggle" aria-label="テーマ切り替え">
  <Icon name="system-uicons:sun" class="icon" />
</button>

<style>
  #theme-toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    background-color: var(--color-card-bg);
    border: 2px solid var(--color-border);
    color: var(--color-text);
    border-radius: 50%;
    width: 3rem;
    height: 3rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 1000;
  }

  #theme-toggle:hover {
    border-color: var(--color-accent);
    transform: scale(1.1);
  }

  .theme-icon {
    font-size: 1.5rem;
    position: absolute;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
</style>

