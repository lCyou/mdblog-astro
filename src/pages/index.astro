---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ReflectiveCard from '@/components/ReflectiveCard';
const pageTitle = "Home";
const githubUsername = "lcyou";
---

<BaseLayout pageTitle={pageTitle}>
	<div class="hero-container">
		<div class="hero-content">
			<ReflectiveCard client:load/>
		</div>
	</div>
</BaseLayout>

<style>
	/* フルスクリーンヒーローセクション */
	.hero-container {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: -1rem;
		margin-left: calc(-50vw + 50%);
	}
	
	.hero-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5rem;
		text-align: center;
		padding: 2rem;
		z-index: 1;
	}
	
	.main-title {
		font-size: 3rem;
		margin: 0;
		color: var(--color-text-emphasis);
		font-family: monospace;
	}
	
	.subtitle {
		font-size: 1.25rem;
		color: var(--color-text);
		opacity: 0.9;
		margin: 0;
	}
	

	
	/* Footer非表示 */
	:global(footer) {
		display: none;
	}
	
	/* レスポンシブ対応 */
	@media (max-width: 768px) {
		
		.main-title {
			font-size: 2rem;
		}
		
		.subtitle {
			font-size: 1rem;
		}
		
		.social-icon {
			width: 1.25rem;
			height: 1.25rem;
		}
		
		.social-links {
			gap: 0.75rem;
		}
	}
</style>

